<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="102dip"
            android:layout_height="wrap_content"
            android:layout_margin="9dip">

            <ImageView
                android:id="@+id/savedImage"
                android:layout_width="165dip"
                android:layout_height="155dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/savedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/savedImage"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="6dip"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

